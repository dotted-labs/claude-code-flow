{
  "mcpServers": {
    "nx-mcp": {
      "command": "npx",
      "args": ["-y", "nx-mcp@latest", "."]
    },
    "context7": {
      "url": "https://mcp.context7.com/mcp"
    },
    "angular-cli": {
      "command": "cmd",
      "args": ["/c", "npx", "-y", "@angular/cli@latest", "mcp"]
    },
    "sequential-thinking": {
      "type": "stdio",
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "env": {}
    },
    "magic": {
      "type": "stdio",
      "command": "cmd",
      "args": ["/c", "npx", "-y", "@21st-dev/magic"],
      "env": {}
    },
    "playwright": {
      "type": "stdio",
      "command": "cmd",
      "args": ["/c", "npx", "-y", "@playwright/mcp@latest"],
      "env": {}
    }
  }
}
